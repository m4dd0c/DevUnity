{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "typeRoots": [
      "./types",
      "/node_modules/@types"
    ] /* Specify multiple folders that act like './node_modules/@types'. */
  },
  "include": ["/src/**/*.{ts}"],
  "exclude": ["dist", "node_modules"]
}
